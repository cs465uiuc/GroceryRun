<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs465.groceryrun.groceryrun.Requester"
    android:background="#FF67C7ED">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Postings"
        android:id="@+id/myPostingsButton"
        android:onClick="myPostings"
        android:layout_below="@+id/postAvailabilityButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Availability"
        android:id="@+id/postAvailabilityButton"
        android:onClick="postAvailability"
        android:layout_below="@+id/button13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Requests"
        android:id="@+id/searchRequests"
        android:onClick="searchRequests"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/myPostingsButton"
        android:layout_alignRight="@+id/postAvailabilityButton"
        android:layout_alignEnd="@+id/postAvailabilityButton" />
</RelativeLayout>
