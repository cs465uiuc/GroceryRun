<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs465.groceryrun.groceryrun.Profile"
    android:background="#FF67C7ED">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hello"
        android:id="@+id/firstNameEdit"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView37"
        android:layout_toEndOf="@+id/textView37"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="World"
        android:id="@+id/lastNameEdit"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/firstNameEdit"
        android:layout_alignLeft="@+id/firstNameEdit"
        android:layout_alignStart="@+id/firstNameEdit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phobos"
        android:id="@+id/locationEdit"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/lastNameEdit"
        android:layout_alignLeft="@+id/lastNameEdit"
        android:layout_alignStart="@+id/lastNameEdit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this space intentionally left blank"
        android:id="@+id/descriptionEdit"
        android:layout_below="@+id/textView40"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name:"
        android:id="@+id/textView37"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/firstNameEdit"
        android:layout_alignBottom="@+id/firstNameEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name:"
        android:id="@+id/textView38"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/lastNameEdit"
        android:layout_alignBottom="@+id/lastNameEdit"
        android:layout_toLeftOf="@+id/firstNameEdit"
        android:layout_toStartOf="@+id/firstNameEdit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:id="@+id/textView39"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/locationEdit"
        android:layout_alignBottom="@+id/locationEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:id="@+id/textView40"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button15"
        android:layout_marginBottom="73dp"
        android:onClick="saveData"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView38"
        android:layout_alignStart="@+id/textView38" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button16"
        android:onClick="cancelData"
        android:layout_alignBottom="@+id/button15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp" />

</RelativeLayout>
