<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cs465.groceryrun.groceryrun.PostRequest">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grocery List:"
        android:id="@+id/groceryListLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/groceryList"
        android:layout_below="@+id/groceryListLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approximate Price: $"
        android:id="@+id/approximatePriceLabel"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/groceryList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/approxPriceEditMyPosting"
        android:layout_alignBaseline="@+id/approximatePriceLabel"
        android:layout_alignBottom="@+id/approximatePriceLabel"
        android:layout_toRightOf="@+id/approximatePriceLabel"
        android:layout_toEndOf="@+id/approximatePriceLabel" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:id="@+id/naPrice"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/approximatePriceLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gratuity: $"
        android:id="@+id/gratuityLabel"
        android:layout_below="@+id/naPrice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/gratuityId"
        android:layout_alignBaseline="@+id/gratuityLabel"
        android:layout_alignBottom="@+id/gratuityLabel"
        android:layout_toRightOf="@+id/gratuityLabel"
        android:layout_toEndOf="@+id/gratuityLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remarks:"
        android:id="@+id/remarksLabel"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/gratuityLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/remarksId"
        android:layout_below="@+id/gratuityId"
        android:layout_alignLeft="@+id/gratuityId"
        android:layout_alignStart="@+id/gratuityId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:id="@+id/timeLabel"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/remarksId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/startTimeMyPosting"
        android:layout_alignBaseline="@+id/timeLabel"
        android:layout_alignBottom="@+id/timeLabel"
        android:layout_toRightOf="@+id/timeLabel"
        android:layout_toEndOf="@+id/timeLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/textView52"
        android:layout_alignBottom="@+id/timeLabel"
        android:layout_toRightOf="@+id/startTimeMyPosting"
        android:layout_toEndOf="@+id/startTimeMyPosting" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/endTimeMyPosting"
        android:layout_alignBottom="@+id/startTimeMyPosting"
        android:layout_toLeftOf="@+id/approxPriceEditMyPosting"
        android:layout_toStartOf="@+id/approxPriceEditMyPosting" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:id="@+id/saveAvailabilityButton"
        android:onClick="postRequest"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/editText18"
        android:layout_alignRight="@+id/textView53"
        android:layout_alignEnd="@+id/textView53" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:id="@+id/textView51"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/startTimeMyPosting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/editText18"
        android:layout_alignBaseline="@+id/textView51"
        android:layout_alignBottom="@+id/textView51"
        android:layout_toRightOf="@+id/textView51"
        android:layout_toEndOf="@+id/textView51" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/textView53"
        android:layout_alignTop="@+id/textView51"
        android:layout_toRightOf="@+id/groceryListLabel"
        android:layout_toEndOf="@+id/groceryListLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/editText19"
        android:layout_alignTop="@+id/editText18"
        android:layout_alignLeft="@+id/endTimeMyPosting"
        android:layout_alignStart="@+id/endTimeMyPosting" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/textView54"
        android:layout_above="@+id/saveAvailabilityButton"
        android:layout_toRightOf="@+id/editText19"
        android:layout_toEndOf="@+id/editText19" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/editText20"
        android:layout_alignTop="@+id/editText19"
        android:layout_toRightOf="@+id/textView54"
        android:layout_toEndOf="@+id/textView54" />

</RelativeLayout>
